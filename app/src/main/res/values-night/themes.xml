<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BestWallpapersNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusbar_nightMode</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- CUSTOMIZE -->
        <item name="bottomNavigation">@color/black</item>
        <item name="buscador">@color/buscadorNightMode</item>
        <item name="textColors">@color/white</item>
        <item name="colorHintGrey">@color/darker_grayNightMode</item>

        <item name="color_fondo">@color/color_fondo_nightMode</item>
        <item name="toolbar2">@color/toolbar_nightMode</item>

        <item name="objects">@color/objects_nightMode</item>
        <item name="slider">@color/darker_grayNightMode</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primaryDarkColor</item>
        <item name="colorSwitchThumbNormal">@color/darker_gray</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>
</resources>